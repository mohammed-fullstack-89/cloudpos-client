{
  "name": "rubikomm-pos",
  "productName": "RubikommPOS",
  "author": "Rubikomm <rubikomm@gmail.com>",
  "homepage": "https://rubikomm.com",
  "license": "MIT",
  "version": "1.1.24",
  "repository": {
    "url": "https://mzughayer@bitbucket.org/mzughayer/cloudpos-client.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "post-install": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w *",
    "init-sequelize": "sequelize-cli init",
    "reset-db": "sequelize-cli db:migrate:undo:all",
    "migrate": "sequelize-cli db:migrate",
    "package:win": "electron-builder --win --x64",
    "package:linux": "electron-builder --linux deb"
  },
  "build": {
    "appId": "com.rubikomm.pos",
    "directories": {
      "buildResources": "resources",
      "output": "packages"
    },
    "nsis": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "icon": "assets/icons/rubikomm.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "legalTrademarks": "Rubikomm",
      "publisherName": "Rubikomm"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": "x64"
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ],
      "category": "Internet"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://server:5080/"
    }
  ],
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^17.4.8",
    "electron-builder": "~22.10.5",
    "electron-packager": "^15.5.1",
    "electron-rebuild": "^3.2.7",
    "eslint": "^8.18.0",
    "sequelize-cli": "^6.4.1"
  },
  "dependencies": {
    "@thiagoelg/node-printer": "^0.6.2",
    "bufferutil": "^4.0.6",
    "modified-electron-pos-printer": "^1.3.12",
    "electron-root-path": "^1.0.16",
    "jimp": "^0.16.1",
    "lodash": "^4.17.21",
    "sequelize": "^6.21.0",
    "sqlite3": "^5.0.8"
  }
}
