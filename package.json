{
  "name": "rposclientapp",
  "productName": "Rpos",
  "version": "0.1.0",
  "description": "Client app for rpos website :) enjoy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "post-install": "electron-builder install-app-deps",
    "rebuild-sqlite3-modules": "electron-rebuild -f -w usb",
    "init-sequelize": "sequelize-cli init",
    "reset-db": "sequelize-cli db:migrate:undo:all",
    "migrate": "sequelize-cli db:migrate",
    "package:mac": "electron-builder electron-builder -m",
    "package:linux": "electron-builder electron-builder -l",
    "package:win": "electron-builder electron-builder --win --x64 portable",
    "package": "electron-builder electron-builder -ml && yarn run package:win"
  },
  "build": {
    "electronVersion": "10.1.3",
    "appId": "com.rubikomm.ropsclient",
    "directories": {
      "buildResources": "resources",
      "output": "packages"
    },
    "mac": {
      "artifactName": "${name}-${version}-${os}.${ext}",
      "category": "public.app-category.wallet",
      "target": [
        "zip"
      ]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false
    },
    "win": {
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "author": "Hamza alfawaer",
  "license": "Licensed",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^10.1.3",
    "electron-builder": "^20.0.4",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.0.3",
    "sequelize-cli": "^6.2.0"
  },
  "dependencies": {
    "electron-pos-printer": "^1.2.4",
    "electron-root-path": "^1.0.16",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "jquery": "^3.5.1",
    "node-gyp": "^7.1.0",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "usb-detection": "^4.10.0"
  }
}
