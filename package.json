{
  "name": "cloud-pos",
  "productName": "CloudPos",
  "version": "1.1.13",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "post-install": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w *",
    "init-sequelize": "sequelize-cli init",
    "reset-db": "sequelize-cli db:migrate:undo:all",
    "migrate": "sequelize-cli db:migrate",
    "package:mac": "electron-builder build -m",
    "package:linux": "electron-builder build -l",
    "package:win": "electron-builder build -w"
  },
  "build": {
    "electronVersion": "8.5.3",
    "appId": "com.rubikomm.cloudpos",
    "directories": {
      "buildResources": "resources",
      "output": "packages"
    },
    "mac": {
      "artifactName": "${name}-${version}-${os}.${ext}",
      "category": "com.rubikomm.cloudpos",
      "icon": "assets/icons/apple.ico",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "icon": "assets/icons/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "legalTrademarks": "Rubikomm",
      "publisherName": "Rubikomm",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://server:5080/"
    }
  ],
  "author": "Rubikomm",
  "license": "Licensed",
  "devDependencies": {
    "devtron": "1.4.0",
    "electron": "8.5.3",
    "electron-builder": "^22.14.5",
    "electron-packager": "^15.4.0",
    "electron-rebuild": "^3.2.5",
    "eslint": "^8.3.0",
    "sequelize-cli": "6.2.0"
  },
  "dependencies": {
    "@thiagoelg/node-printer": "0.5.3",
    "bufferutil": "4.0.3",
    "electron-pos-printer": "1.2.4",
    "electron-root-path": "1.0.16",
    "jimp": "0.16.1",
    "lodash": "^4.17.21",
    "logrocket": "2.1.1",
    "node-gyp": "3.8.0",
    "sequelize": "6.9.0",
    "sqlite3": "5.0.0"
  }
}