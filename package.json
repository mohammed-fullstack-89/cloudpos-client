{
  "name": "cloud-pos",
  "productName": "CloudPos",
  "version": "1.1.17",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "post-install": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w *",
    "init-sequelize": "sequelize-cli init",
    "reset-db": "sequelize-cli db:migrate:undo:all",
    "migrate": "sequelize-cli db:migrate",
    "package:win": "electron-builder electron-builder --win --x64 portable"
  },
  "build": {
    "electronVersion": "8.5.3",
    "appId": "com.rubikomm.cloudpos",
    "directories": {
      "buildResources": "resources",
      "output": "packages"
    },
    "nsis": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}",
      "icon": "assets/icons/cloudpos.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "legalTrademarks": "Rubikomm",
      "publisherName": "Rubikomm"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://server:5080/"
    }
  ],
  "author": "Rubikomm",
  "license": "MIT",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^8.5.3",
    "electron-builder": "^20.0.4",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.2.0",
    "eslint": "^7.14.0",
    "sequelize-cli": "^6.2.0"
  },
  "dependencies": {
    "@thiagoelg/node-printer": "^0.5.3",
    "bufferutil": "^4.0.3",
    "electron-pos-printer": "^1.2.4",
    "electron-root-path": "^1.0.16",
    "jimp": "^0.16.1",
    "lodash": "^4.17.20",
    "sequelize": "^6.12.2",
    "sqlite3": "^5.0.0"
  }
}