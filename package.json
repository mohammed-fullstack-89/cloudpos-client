{
  "name": "StaggingPos",
  "productName": "StaggingPos",
  "version": "1.1.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "post-install": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w *",
    "init-sequelize": "sequelize-cli init",
    "reset-db": "sequelize-cli db:migrate:undo:all",
    "migrate": "sequelize-cli db:migrate",
    "package:mac": "electron-builder electron-builder -m",
    "package:linux": "electron-builder electron-builder -l",
    "package:win": "electron-builder electron-builder --win --x64 portable",
    "package": "electron-builder electron-builder -ml && yarn run package:win"
  },
  "build": {
    "electronVersion": "8.5.3",
    "appId": "com.rubikomm.StaggingPos",
    "directories": {
      "buildResources": "resources",
      "output": "packages"
    },
    "mac": {
      "artifactName": "${name}-${version}-${os}.${ext}",
      "category": "com.rubikomm.StaggingPos",
      "target": [
        "zip"
      ]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
      "icon": "assets/icons/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://server:5080/"
    }
  ],
  "author": "Hamza alfawaer",
  "license": "Licensed",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^8.5.3",
    "electron-builder": "^20.0.4",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.2.0",
    "eslint": "^7.14.0",
    "sequelize-cli": "^6.2.0"
  },
  "dependencies": {
    "@thiagoelg/node-printer": "^0.5.3",
    "electron-root-path": "^1.0.16",
    "logrocket": "^1.0.14",
    "node-gyp": "^7.1.2",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0"
  }
}